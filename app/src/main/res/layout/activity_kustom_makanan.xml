<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".KustomMakanan">

    <ImageButton
        android:id="@+id/btnBackListMakanan"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_grey"
        android:background="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="Waktu Makanan"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"/>

    <Spinner
        android:id="@+id/spinnerMealType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:hint="Pilih Jenis Makanan"
        android:layout_marginVertical="10dp"
        android:padding="10dp"
        android:background="@drawable/border_biru_rounded"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Makanan"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"/>

    <EditText
        android:id="@+id/makananNameUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:hint="Masukan Nama Makanan"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah Kalori / 100 gram"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"/>

    <EditText
        android:id="@+id/editJumlahKalori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginBottom="5dp"
        android:hint="Jumlah Kalori"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Takaran Saji (gram)"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"/>

    <EditText
        android:id="@+id/editberatMakanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:hint="Masukan Takaran Saji"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simpanKustomMakanan"
        android:text="Tambah Makanan"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="50dp"
        android:background="@drawable/border_biru_rounded"/>


</LinearLayout>





